<%= form_for [:admin,@todo],remote: true do |f| %>
<%= f.hidden_field :project_id, value: @project.id%>
<div class="col-md-3">
    <div class="form-group">
      <!--<label for="usr">Name:</label>-->
      <%=f.label :name%>
      <%= f.text_field :name, class: "form-control", placeholder: "Add Todo"%>
    </div>
</div>
<div class="col-md-3">
 <div class="form-group">
  <label for="sel1">Select Status:</label>
    <%= f.select :status, options_for_select(Todo.statuses.keys),{},{class: "form-control"}%>
 </div>   
</div>
<div class="col-md-3">
  <div class="form-group">
  <%= label_tag(:user_id, "Developer") %>
  <%= select_tag(:user_id, options_for_select(@project.users.map{|u| [u.to_s, u.id] }),{class: "form-control"}) %>    
  </div>    
</div>

<div class="col-md-3">
    <div class="form-group">
        <br/>
      <%= f.submit "Create",class: 'btn btn-primary'%>  
    </div>
    
</div>
<%end%> 
<br/>
<%=form_tag(controller: "projects", action: "assign_project", method: "post", class: "nifty_form") do%>

  <%= hidden_field_tag(:id, @project.id) %>
  <div class="col-md-7">
  <div class="form-group">
  <%= label_tag(:user_id, "Developer") %>
  <%= select_tag(:user_id, options_for_select(User.all.map{|u| [u.to_s, u.id] unless @project.users.include?(u)}),{class: "form-control"}) %>    
  </div>    
  </div>

  <div class="col-md-5">
  <br/>
    <%= submit_tag "Add Developer", class: "btn btn-primary"%>
  </div>
  
<%end%>
